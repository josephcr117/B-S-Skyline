@model Visit

<h2>Create Visit</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="VisitorName" class="control-label"></label>
        <input asp-for="VisitorName" class="form-control" />
        <span asp-validation-for="VisitorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VisitorDni" class="control-label"></label>
        <input asp-for="VisitorDni" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LicensePlate" class="control-label"></label>
        <input asp-for="LicensePlate" class="form-control" />
    </div>

    <input type="hidden" asp-for="ResidentId" value="@ViewBag.ResidentId" />

    <div class="form-group form-check mb-3">
        <input type="checkbox" asp-for="IsDelivery" class="form-check-input" id="deliveryToggle" />
        <label class="form-check-label" asp-for="IsDelivery">Delivery Visit</label>
    </div>

    <div id="deliveryFields" style="display: none;">
        <div class="form-group">
            <label asp-for="DeliveryService"></label>
            <select asp-for="DeliveryService" class="form-control"
                    asp-items="Html.GetEnumSelectList<Visit.DeliveryServiceType>()">
                <option value="">-- Select Service --</option>
            </select>
        </div>
    </div>

    @section Scripts {
        <script>
            document.getElementById('deliveryToggle').addEventListener('change', function() {
                document.getElementById('deliveryFields').style.display =
                    this.checked ? 'block' : 'none';

                if(this.checked) {
                    document.getElementById('VisitorName').value = 'Delivery';
                }
            });
        </script>
    }

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>