@model List<FavoriteVisitor>

<h2>Favorite Visitors</h2>

<table class="table">
    <thead>
        <tr>
            <th>Visitor Name</th>
            <th>License Plate</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var favorite in Model)
        {
            <tr>
                <td>@favorite.VisitorName</td>
                <td>@favorite.LicensePlate</td>
                <td>
                    @if (favorite.IsDeliveryContact)
                    {
                        <span class="badge bg-info">
                            <i class="fas fa-motorcycle"></i>
                            Delivery
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Regular Visitor</span>
                    }
                </td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-action="EditFavorite" asp-route-id="@favorite.Id"
                           class="btn btn-warning" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form asp-action="DeleteFavorite" method="post">
                            <input type="hidden" name="id" value="@favorite.Id" />
                            <button type="submit" class="btn btn-danger" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Visits</a>