@model Dictionary<string, B_S_Skyline.Models.VehicleModel>

<h2>Your Vehicles</h2>



@if (Model.Count == 0)
{
    <div class="alert alert-info">No vehicles registered</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>License Plate</th>
                <th>Make</th>
                <th>Model</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Value.LicensePlate</td>
                    <td>@item.Value.Make</td>
                    <td>@item.Value.Model</td>
                    <td>
                        <form asp-action="DeleteVehicle" method="post">
                            <input type="hidden" name="id" value="@item.Key" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Delete this vehicle?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Visits
    </a>

    <a asp-action="AddVehicle" class="btn btn-success">
        <i class="fas fa-car"></i> Register New Vehicle
    </a>
</div>