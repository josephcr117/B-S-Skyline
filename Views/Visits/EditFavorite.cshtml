@model FavoriteVisitor

<h2>Edit Favorite Visitor</h2>

<form asp-action="EditFavorite">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="VisitorName" class="control-label"></label>
        <input asp-for="VisitorName" class="form-control" />
        <span asp-validation-for="VisitorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LicensePlate" class="control-label"></label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsDeliveryContact" class="form-check-input" id="isDeliveryCheck" />
        <label class="form-check-label" for="isDeliveryCheck">Is this a delivery contact?</label>
    </div>

    <div id="deliveryServiceGroup" style="display: none;">
        <div class="form-group">
            <label asp-for="DeliveryService" class="control-label"></label>
            <select asp-for="DeliveryService" class="form-control">
                <option value="">Select Delivery Service</option>
                <option value="@Visit.DeliveryServiceType.UberEats">UberEats</option>
                <option value="@Visit.DeliveryServiceType.Rappi">Rappi</option>
                <option value="@Visit.DeliveryServiceType.Didi">Didi</option>
                <option value="@Visit.DeliveryServiceType.PedidosYa">PedidosYa</option>
                <option value="@Visit.DeliveryServiceType.Other">Other</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Favorites" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
        <script>
            $(document).ready(function() {
                function toggleDeliveryFields() {
                    $('#deliveryServiceGroup').toggle($('#isDeliveryCheck').is(':checked'));
                }

                $('#isDeliveryCheck').change(toggleDeliveryFields);
                toggleDeliveryFields(); // Initialize
            });
        </script>
}