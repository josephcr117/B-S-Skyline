@model B_S_Skyline.Models.ResidentialProject

<h2>Edit Project</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Code" class="control-label"></label>
        <input asp-for="Code" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OfficePhone" class="control-label"></label>
        <input asp-for="OfficePhone" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">House Numbers (comma separated)</label>
        <input name="HouseNumbersInput" class="form-control"
               value="@string.Join(", ", Model.HouseNumbers)" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>