@model B_S_Skyline.Models.UserModel

<h2>Create New User</h2>

@using (Html.BeginForm("Create", "UserManagement", FormMethod.Post))
{
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter Full Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email Address" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" class="form-control">
            <option value="" disabled selected>Select Role</option>
            <option value="Resident">Resident</option>
            <option value="SecurityOfficer">Security Officer</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dni"></label>
        <input asp-for="Dni" class="form-control" placeholder="Enter ID Number" />
        <span asp-validation-for="Dni" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumbers">Phone Numbers (comma-separated)</label>
        <input id="phoneNumbersInput" name="phoneNumbersInput" class="form-control" placeholder="Enter Phone Numbers" />
        <span asp-validation-for="PhoneNumbers" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnitNumber"></label>
        <input asp-for="UnitNumber" class="form-control" placeholder="Enter Unit Number" />
        <span asp-validation-for="UnitNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" class="form-control" placeholder="Enter Password (min. 6 characters)" />
        <span class="text-danger">
            @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Any())
            {
                @ViewData.ModelState[""].Errors[0].ErrorMessage
            }
        </span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save"></i> Save User
    </button>
}