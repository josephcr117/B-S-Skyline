@model UserModel

<h2>Edit Security Officer</h2>

<form asp-action="EditOfficer">
    <input type="hidden" asp-for="Uid" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="BadgeNumber" class="control-label"></label>
                <input asp-for="BadgeNumber" class="form-control" />
                <span asp-validation-for="BadgeNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentProjectId" class="control-label"></label>
                <select asp-for="CurrentProjectId" class="form-control" asp-items="ViewBag.Projects">
                    <option value="">Select Assigned Project</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Save Changes
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>