@model B_S_Skyline.Models.UserModel

<h2>Create New Resident</h2>

@using (Html.BeginForm("CreateResident", "UserManagement", FormMethod.Post))
{
    <div class="form-group">
        <label asp-for="Name">Full Name</label>
        <input asp-for="Name" class="form-control" placeholder="Steven Fonseca Araya" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" placeholder="sfonseca@bsskyline.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dni">ID Number</label>
        <input asp-for="Dni" class="form-control" placeholder="901200966" />
        <span asp-validation-for="Dni" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HouseNumber">House Number</label>
        <input asp-for="HouseNumber" id="houseNumberInput" class="form-control" placeholder="Enter House Number" />
        <span asp-validation-for="HouseNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumbers">Phone Numbers (comma-separated)</label>
        <input id="phoneNumbersInput" name="phoneNumbersInput" class="form-control" placeholder="Enter Phone Numbers" />
        <span asp-validation-for="PhoneNumbers" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectId"></label>
        <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.Projects">
            <option value="">Select a Project</option>
        </select>
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" class="form-control" placeholder="Enter Password (min. 6 characters)" />
        <span class="text-danger">
            @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Any())
            {
                @ViewData.ModelState[""].Errors[0].ErrorMessage
            }
        </span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save"></i> Save Resident
    </button>
}