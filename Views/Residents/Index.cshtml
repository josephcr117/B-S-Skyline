@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@model List<Resident>

<h2>Condominium Owners</h2>

<table class="table">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Name</th>
            <th>Unit</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var resident in Model)
        {
            <tr>
                <td>@resident.Dni</td>
                <td>@resident.Name</td>
                <td>@resident.UnitNumber</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Details" asp-route-id="@resident.Id"
                           class="btn btn-info" title="View Details">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@resident.Id"
                           class="btn btn-warning" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@resident.Id"
                           class="btn btn-danger" title="Delete">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Register New Owner</a>