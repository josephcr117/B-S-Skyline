@model Resident

@{
    ViewData["Title"] = "Delete Resident";
}

<h2>Delete Resident</h2>

<h3 class="text-danger">Are you sure you want to delete this resident?</h3>

<div class="alert alert-warning">
    <strong>Warning:</strong> This action cannot be undone.
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">DNI:</dt>
        <dd class="col-sm-9">@Model.Dni</dd>

        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Unit Number:</dt>
        <dd class="col-sm-9">@Model.UnitNumber</dd>

        @if (ViewBag.ProjectName != null)
        {
            <dt class="col-sm-3">Project:</dt>
            <dd class="col-sm-9">@ViewBag.ProjectName</dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Confirm Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>