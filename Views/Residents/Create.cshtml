@model Resident

<h2>Register New Owner</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Dni"></label>
        <input asp-for="Dni" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Phone Numbers (comma separated)</label>
        <input name="phoneNumbersInput" class="form-control" placeholder="8888-8888, 7777-7777" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Assign to Project</label>
        @if (ViewBag.Projects != null && ((List<SelectListItem>)ViewBag.Projects).Count > 0)
        {
            <select asp-for="ProjectId" class="form-control" required>
                <option value="">-- Select Project --</option>
                @foreach (var project in ViewBag.Projects)
                {
                    <option value="@project.Value">@project.Text</option>
                }
            </select>
        }
        else
        {
            <div class="alert alert-warning">
                No projects found. Please <a asp-controller="ResidentialProjects" asp-action="Create">create a project</a> first.
            </div>
            <select asp-for="ProjectId" class="form-control" disabled>
                <option value="">-- No projects available --</option>
            </select>
        }
    </div>

    <div class="form-group">
        <label asp-for="UnitNumber"></label>
        <input asp-for="UnitNumber" class="form-control" required placeholder="House 154" />
    </div>

